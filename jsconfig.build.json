{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.js"],
  "exclude": ["node_modules"]
}
